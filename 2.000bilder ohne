  <!-- Geschichten-Modal -->
  <div id="story-modal" class="story-modal hidden">
    <button id="close-story-modal" class="action-btn mb-4">Schlie√üen</button>
    <h2 id="story-modal-title" class="text-2xl font-bold text-[#cc99ff]"></h2>
